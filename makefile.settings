MOON_ROOT_DIR:=$(shell DIRECTORY="$(dir $(realpath $(lastword $(MAKEFILE_LIST))))"; echo $${DIRECTORY%/})

BIN_DIR = $(MOON_ROOT_DIR)/bin
INC_DIR = $(MOON_ROOT_DIR)/includes
OBJ_DIR = $(MOON_ROOT_DIR)/obj

BISON = bison
BISON_FLAGS = --verbose

CC = clang
CC_FLAGS = 
CPP_FLAGS = -I"$(INC_DIR)"

CXX = clang++
CXX_FLAGS = 

FLEX = flex
FLEX_FLAGS = 

DEBUG ?= 0

ifeq ($(DEBUG), 1)
	CPP_FLAGS += -g -DDEBUG
endif
